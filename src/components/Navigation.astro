---
// Navigation.astro - Updated to work with new logo size
---

<nav class="fixed top-0 w-full z-50 glass border-b border-neon-green/20">
  <div class="container mx-auto px-6 py-3">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="#hero" class="group">
        <slot name="logo" />
      </a>
      
      <!-- Navigation links -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="#about" class="nav-link">About</a>
        <a href="#products" class="nav-link">Products</a>
        <a href="#technology" class="nav-link">Technology</a>
        <a href="#faq" class="nav-link">FAQ</a>
        <a href="#contact" class="nav-link">Contact</a>
        <a 
          href="https://github.com/highball-technomancy" 
          target="_blank"
          rel="noopener noreferrer"
          class="px-6 py-2 bg-neon-green/10 border border-neon-green text-neon-green rounded-full hover:bg-neon-green hover:text-dark-bg transition-all glow-box-green"
        >
          GitHub
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden text-neon-green"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 space-y-3">
      <a href="#about" class="block nav-link-mobile">About</a>
      <a href="#products" class="block nav-link-mobile">Products</a>
      <a href="#technology" class="block nav-link-mobile">Technology</a>
      <a href="#faq" class="block nav-link-mobile">FAQ</a>
      <a href="#contact" class="block nav-link-mobile">Contact</a>
      <a 
        href="https://github.com/highball-technomancy" 
        target="_blank"
        rel="noopener noreferrer"
        class="block text-center px-6 py-2 bg-neon-green/10 border border-neon-green text-neon-green rounded-full hover:bg-neon-green hover:text-dark-bg transition-all"
      >
        GitHub
      </a>
    </div>
  </div>
</nav>

<style>
  .nav-link {
    @apply text-gray-300 hover:text-neon-green transition-colors relative;
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #00c853, #a855f7);
    transition: width 0.3s ease;
  }
  
  .nav-link:hover::after {
    width: 100%;
  }
  
  .nav-link-mobile {
    @apply text-gray-300 hover:text-neon-green transition-colors py-2 px-4 rounded hover:bg-neon-green/10;
  }
</style>

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  // Close mobile menu when clicking a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
  
  // Smooth scroll for all navigation links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href') || '');
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
</script>
