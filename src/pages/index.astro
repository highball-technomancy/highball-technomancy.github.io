---
// index.astro - Cleaned up with SVG icons, better messaging, proper disclaimer
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import ProductCard from '../components/ProductCard.astro';
import FAQ from '../components/FAQ.astro';
import Giscus from '../components/Giscus.astro';
import Footer from '../components/Footer.astro';
import Logo from '../components/Logo.astro';
---

<Layout>
  <!-- Navigation -->
  <Navigation>
    <Logo slot="logo" size="auto" />
  </Navigation>

  <!-- Hero Section -->
  <Hero />

  <!-- About Section -->
  <section id="about" class="py-20 bg-dark-bg-alt">
    <div class="container mx-auto px-6">
      <h2 class="text-5xl font-bold text-center mb-6 glow-purple">What is Highball Technomancy?</h2>
      <p class="text-xl text-gray-300 text-center max-w-3xl mx-auto mb-12">
        We're technomancers—blending artificial intelligence with useful technology to create curious tools that empower the adventurous. 
        Our mission: transmute intelligent, transparent, and powerful platforms that put you in control.
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16">
        <!-- Feature 1: AI-Powered -->
        <div class="glass rounded-xl p-8 text-center hover:border-neon-green/50 border border-white/10 transition-all">
          <div class="flex justify-center mb-4">
            <svg class="w-16 h-16 text-neon-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3 text-neon-green">AI-Powered</h3>
          <p class="text-gray-400">
            Leveraging cutting-edge machine learning and LLMs to provide intelligent insights and automated decision-making.
          </p>
        </div>
        
        <!-- Feature 2: Built for Adventurers -->
        <div class="glass rounded-xl p-8 text-center hover:border-neon-purple/50 border border-white/10 transition-all">
          <div class="flex justify-center mb-4">
            <svg class="w-16 h-16 text-neon-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3 text-neon-purple">Built for Adventurers</h3>
          <p class="text-gray-400">
            Designed for those who aren't afraid to explore new unknowns and push boundaries in their every day lives.
          </p>
        </div>
        
        <!-- Feature 3: Open Source -->
        <div class="glass rounded-xl p-8 text-center hover:border-neon-cyan/50 border border-white/10 transition-all">
          <div class="flex justify-center mb-4">
            <svg class="w-16 h-16 text-neon-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3 text-neon-cyan">Open Source</h3>
          <p class="text-gray-400">
            Transparency is our foundation. All our projects are open-source, allowing you to audit, modify, and contribute.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Products Section -->
  <section id="products" class="py-20 bg-dark-bg">
    <div class="container mx-auto px-6">
      <h2 class="text-5xl font-bold text-center mb-6 glow-green">Our Products</h2>
      <p class="text-xl text-gray-300 text-center max-w-2xl mx-auto mb-16">
        Innovative AI-powered tools built with modern technology.
      </p>
      
      <div class="max-w-4xl mx-auto">
        <!-- Permafrost -->
        <ProductCard
          title="Permafrost"
          description="Professional-grade AI-powered cryptocurrency grid trading bot. Automate your trading strategy with real-time monitoring, advanced analytics, and risk-free sandbox testing."
          status="In Development"
          techStack={['Python', 'FastAPI', 'React', 'TypeScript', 'PostgreSQL', 'Redis', 'InfluxDB', 'Docker']}
          iconImage="/108Frostbyte.png"
        >
          <div class="mt-4 space-y-2">
            <h4 class="text-lg font-semibold text-neon-cyan">Key Features:</h4>
            <ul class="text-sm text-gray-400 space-y-1 list-disc list-inside">
              <li>Automated grid trading across multiple crypto pairs</li>
              <li>AI-assisted market analysis and strategy recommendations</li>
              <li>Real-time monitoring with Grafana dashboards</li>
              <li>Sandbox mode for risk-free strategy testing</li>
              <li>Multi-exchange support (Coinbase, Binance, more coming)</li>
            </ul>
            <p class="text-sm text-gray-500 mt-4 italic">
              * Permafrost repository is currently private. Invitation-only access during development.
            </p>
          </div>
        </ProductCard>
        
        <div class="mt-12 text-center">
          <p class="text-gray-500">
            More products in development. Visit our <a href="https://github.com/highball-technomancy" class="text-neon-purple hover:underline" target="_blank" rel="noopener noreferrer">GitHub organization</a> for updates on open-source projects.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Technology Section -->
  <section id="technology" class="py-20 bg-dark-blue">
    <div class="container mx-auto px-6">
      <h2 class="text-5xl font-bold text-center mb-6 glow-cyan">How We Build</h2>
      <p class="text-xl text-gray-300 text-center max-w-2xl mx-auto mb-16">
        Production-grade tech stack. Modern, robust, and battle-tested.
      </p>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-5xl mx-auto">
        <!-- Python -->
        <div class="glass rounded-xl p-6 text-center hover:border-neon-green/50 border border-white/10 transition-all">
          <div class="flex justify-center mb-3">
            <svg class="w-12 h-12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
